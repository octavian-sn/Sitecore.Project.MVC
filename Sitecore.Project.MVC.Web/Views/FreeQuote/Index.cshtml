@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation;
@using Sitecore.Project.MVC.Web.Models;
@model FreeQuoteModel

@if (Model != null)
{
    <div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
        <div class="container quote px-lg-0">
            <div class="row g-0 mx-lg-0">
                <div class="col-lg-6 ps-lg-0" style="min-height: 400px;">
                    <div class="position-relative h-100">
                        @Model.Image
                    </div>
                </div>
                <div class="col-lg-6 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
                    <div class="p-lg-5 pe-lg-0">
                        <div class="section-title text-start">
                            <h1 class="display-5 mb-4">@Model.Title</h1>
                        </div>
                        <p class="mb-4 pb-2">@Model.Description</p>
                        <form method="post">
                            <input name="Id" hidden/>
                            <div class="row g-3">
                                <div class="col-12 col-sm-6">
                                    <input name="Name" for type="text" class="form-control border-0" placeholder="Your Name" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input name="Email" type="email" class="form-control border-0" placeholder="Your Email" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input name="Mobile" type="tel" class="form-control border-0" placeholder="Your Mobile" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <select name="Service" class="form-select border-0" style="height: 55px;">
                                        <option selected>Select A Service</option>
                                        <option value="Service1">Service 1</option>
                                        <option value="Service2">Service 2</option>
                                        <option value="Service3">Service 3</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <textarea name="Note" class="form-control border-0" placeholder="Special Note"></textarea>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Submit</button>
                                </div>
                                <div class="col-12">
                                    <a href="/pages/quotes" class="btn btn-primary w-100 py-3">Quote Requests</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}